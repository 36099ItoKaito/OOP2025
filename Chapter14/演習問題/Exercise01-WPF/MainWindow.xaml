<Window x:Class="Exercise01_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Reader" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Name="ReadFileButton" 
                Content="ファイルを読み込む" 
                Width="150" 
                Height="40" 
                Margin="10"
                Grid.Row="0"
                Click="ReadFileButton_Click"/>

        <ScrollViewer Grid.Row="1" 
                      Margin="10,0,10,10"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto">
            <TextBlock Name="OutputTextBlock" 
                       TextWrapping="Wrap"
                       Padding="5"/>
        </ScrollViewer>
    </Grid>
</Window>