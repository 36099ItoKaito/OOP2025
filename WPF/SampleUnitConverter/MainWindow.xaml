<Window x:Class="SampleUnitConverter.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:local="clr-namespace:SampleUnitConverter"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        Title="SampleConverter" SizeToContent="WidthAndHeight" FontSize="20" FontFamily="Segoe UI Light">
    <StackPanel Margin="4">
        <StackPanel Orientation="Horizontal">
            <TextBox Width="100" Margin="4" Text="{Binding MetricValue, StringFormat={}{0:N3}, UpdateSourceTrigger=PropertyChanged}"/>
            <ComboBox Width="80" Margin="4"
                      ItemsSource="{Binding MetricUnits}"
                      SelectedItem="{Binding SelectedMetricUnit}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Width="40" Margin="4" Content="▲"
                    Command="{Binding ImperialToMetricCommand}"/>
            <Button Width="40" Margin="4" Content="▼"
                    Command="{Binding MetricToImperialCommand}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBox Width="100" Margin="4" Text="{Binding ImperialValue, StringFormat={}{0:N3}, UpdateSourceTrigger=PropertyChanged}"/>
            <ComboBox Width="80" Margin="4" 
                      ItemsSource="{Binding ImperialUnits}"
                      SelectedItem="{Binding SelectedImperialUnit}"/>
        </StackPanel>
    </StackPanel>
</Window>